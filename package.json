{
  "name": "marketing-agent",
  "private": true,
  "workspaces": [
    "apps/server",
    "apps/dash"
  ],
  "scripts": {"dev": "concurrently -n \"DASH,SERV\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev --workspace=@app/dash\" \"npm run dev --workspace=@app/server\"",
    "dev:server": "npm run dev --workspace=@app/server",
    "dev:dash": "npm run dev --workspace=@app/dash",
    "db:sync": "npm run db:push --workspace=@app/server && npm run db:sync --workspace=@app/dash",
    "lint": "npm run lint --workspace=@app/dash"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "lint-staged": {
    "apps/dash/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/dash/**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
